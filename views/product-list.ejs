<%- include("layout/head.ejs") %>
    </head>

    <body>
        <%- include("layout/navigation.ejs") %>
            <main>
                <section class="home2">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <h1 style="color: rgb(170, 10, 250);"><%=(admin)? 'Admin Panal' :''%></h1>
                                <h2 id="booklist">
                                    <%=(admin)? 'Admin Book List' :'Book List'%>
                                </h2>
                                <% if(products.length){%>
                                    <div class="row">
                                        <%for(let product of products){%>
                                            <div class="col-md-3">
                                                <div class="product text-center">
                                                    <h3>
                                                        <%=product.title%>
                                                    </h3>
                                                    <p>
                                                        <%=product.image%>
                                                    </p>
                                                    <p>Price : <strong>
                                                            <%=product.price%>
                                                        </strong></p>
                                                    <p>
                                                        <%=product.description%>
                                                    </p>
                                                    <%if(admin){%>
                                                        <div class="my-2 text-center d-flex justify-content-center">
                                                            <a href="/products/edit/<%=product.id%>"
                                                                class="btn btn-primary mx-2">Edit </a>
                                                            <form action="/products/delete" method="post">
                                                                <input type="hidden" name="productId"
                                                                    value="<%=product.id%>">
                                                                <button class="btn btn-danger">Delete</button>
                                                            </form>

                                                        </div>
                                                        <%}else{%>
                                                            <div class="my-2 text-center d-flex justify-content-center">
                                                                <a href="/product/details/<%=product.id%>"
                                                                    class="btn btn-primary mx-2">View Details</a>
                                                                <%- include('layout/cartButton.ejs',{product:product})
                                                                    %>
                                                            </div>
                                                            <%}%>
                                                </div>
                                            </div>
                                            <%}%>
                                    </div>
                                    <% } else{%>
                                        <div>No Room available</div>
                                        <%}%>
                            </div>
                        </div>
                    </div>




                </section>
            </main>
            <%- include("layout/footer.ejs") %>